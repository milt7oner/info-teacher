---
// Navbar.astro
const { active } = Astro.props; // opcional: para marcar la opción activa
const links = [
  { name: "Teacher", href: "#teacher", dynamic: true }, // <- marcamos como dinámico
  { name: "Calendar", href: "/school-calendar" },
  { name: "Regulation", href: "#regulation" },
];
---

<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Logo o nombre -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img src="/Logo.png" alt="Company Logo" class="md:h-25 h-20 w-auto" />
        </a>
      </div>

      <!-- Links -->
      <div class="hidden md:flex space-x-6">
        {
          links.map((link) => (
            <a
              href={link.dynamic ? "#" : link.href}
              class={`px-3 py-2 rounded-md text-sm font-medium ${
                active === link.name
                  ? "bg-[#535983] text-white"
                  : "text-gray-700 hover:bg-purple-100 hover:text-[#535983]"
              }`}
              data-dynamic={link.dynamic ? "true" : "false"}
              data-name={link.name}
            >
              {link.name}
            </a>
          ))
        }
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-gray-700 focus:outline-none"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden px-2 pt-2 pb-3 space-y-1">
    {
      links.map((link) => (
        <a
          href={link.dynamic ? "#" : link.href}
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-purple-100 hover:text-[#535983"
          data-dynamic={link.dynamic ? "true" : "false"}
          data-name={link.name}
        >
          {link.name}
        </a>
      ))
    }
  </div>

  <script>
    const button = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");
    button?.addEventListener("click", () => {
      menu?.classList.toggle("hidden");
    });

    // Manejo del link dinámico "Teacher"
    document.querySelectorAll("a[data-dynamic='true']").forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        const level = localStorage.getItem("selectedTeacher");
        if (level) {
          window.location.href = "/grade/" + level;
        } else {
          alert("Please pick a grade first!");
        }
      });
    });
  </script>
</nav>
